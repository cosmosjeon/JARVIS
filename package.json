{
  "name": "hierarchical-force-tree-react",
  "version": "1.0.0",
  "description": "React-based hierarchical force-directed tree with hover animations",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:renderer": "cross-env BROWSER=none react-scripts start",
    "start:electron": "wait-on tcp:3000 && electron .",
    "electron:dev": "concurrently \"npm run start:renderer\" \"npm run start:electron\"",
    "electron:build": "npm run build && electron-builder",
    "electron:smoke": "node scripts/smoke/run-electron-smoke.js"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.8.5",
    "electron-log": "^5.1.2",
    "dotenv": "^16.4.5",
    "openai": "^4.59.1",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-highlighter": "^0.7.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "autoprefixer": "^10.4.21",
    "electron-builder": "^25.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "wait-on": "^7.2.0",
    "electron": "^31.2.0"
  },
  "build": {
    "appId": "com.jarvis.widget",
    "asar": true,
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
